<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.dip.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.dip.ui.details.DetailsFragment"
        android:label="Детали"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="valute"
            app:argType="com.example.dip.data.api.Valute" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.dip.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>