<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DIP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#4A47A3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#1DB954</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="android:colorBackground">#1C1B1F</item>
        <item name="colorOnBackground">#EAEAEA</item>

        <item name="android:navigationBarColor">#1C1B1F</item>
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">#B3B3B3</item>

        <item name="alertDialogTheme">@style/ThemeOverlay.DIP.AlertDialog</item>
        <item name="toolbarStyle">@style/Widget.DIP.Toolbar</item>
    </style>

    <style name="ThemeOverlay.DIP.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton.Negative</item>
    </style>

    <style name="DialogButton.Positive" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DialogButton.Negative" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
